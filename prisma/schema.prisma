// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manufacturer {
  id       Int     @id @default(autoincrement())
  name     String
  isActive Boolean @default(true)
  models   Model[]
}

model Model {
  id             Int                 @id @default(autoincrement())
  name           String
  isActive       Boolean             @default(true)
  Manufacturer   Manufacturer        @relation(fields: [manufacturerId], references: [id])
  manufacturerId Int
  modelYears     ModelYear[]
  transmissions  ModelTransmission[]
  colors         ModelColor[]
}

model ModelYear {
  id      Int   @id @default(autoincrement())
  year    Int
  Model   Model @relation(fields: [modelId], references: [id])
  modelId Int
}

model Transmission {
  id     Int                 @id @default(autoincrement())
  name   String
  models ModelTransmission[]
}

model ModelTransmission {
  modelId        Int
  transmissionId Int

  Model        Model        @relation(fields: [modelId], references: [id])
  Transmission Transmission @relation(fields: [transmissionId], references: [id])

  @@id([modelId, transmissionId])
}

model Color {
  id     Int          @id @default(autoincrement())
  code   String
  name   String
  models ModelColor[]
}

model ModelColor {
  modelId Int
  colorId Int

  Model Model @relation(fields: [modelId], references: [id])
  Color Color @relation(fields: [colorId], references: [id])

  activeStart DateTime @unique
  activeEnd   DateTime @unique

  @@id([modelId, colorId])
}
